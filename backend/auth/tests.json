{
  "tests": [
    {
      "name": "Check access denied for unknown user",
      "method": "GET",
      "path": "/?telegram_id=999999999",
      "expectedStatus": 403,
      "expectedBody": {
        "allowed": false
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Add new allowed user",
      "method": "POST",
      "path": "/",
      "body": {
        "telegram_id": 123456789,
        "username": "testuser"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}
